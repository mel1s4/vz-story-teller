{
  // VSCode settings for the vz-story-teller plugin development
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact"
  ],
  "php.validate.enable": true,
  "phpcs.enable": true,
  "phpcs.standard": "WordPress",
  "files.exclude": {
    "**/node_modules": true,
    "**/vendor": true
  }
}
